{% extends 'base.html.twig' %}

{% block title %}Devenir membre{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white text-center py-4">
                <h1 class="mb-0">üë• Devenir membre</h1>
                <p class="mb-0 opacity-75">Rejoignez Sauve les Pingouins d√®s aujourd'hui !</p>
            </div>
            <div class="card-body p-5">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prenom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Votre pr√©nom'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Votre nom'}}) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'votre@email.com'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.telephone, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '06 12 34 56 78'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.username, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'mon_login_unique'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.password, {
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢',
                                'minlength': '6',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>

                    <div class="d-grid gap-2">
                        {{ form_row(form.submit, {
                            'attr': {
                                'class': 'btn btn-success btn-lg fw-bold py-3'
                            }
                        }) }}
                    </div>

                {{ form_end(form) }}

                <hr class="my-4">

                <div class="text-center">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg">
                        ‚Üê Retour √† l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
